<robot name="robot_arm">

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.0075" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.015" radius="0.089" />
      </geometry>
    </visual>
  </link>

  <link name="base_rot">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.1" />
      </geometry>
    </visual>
  </link>

  <joint name="base_joint" type="revolute">
    <parent link="base_link" />
    <child link="base_rot" />
    <origin xyz="0 0 0.065" rpy="0 0 0" />.
    <axis xyz="0 0 -1" />
  </joint>

  <!-- Arm segment 1 -->
  <link name="arm1">
    <visual>
      <origin xyz="0.0 0 0.060" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.120" radius="0.022" />
      </geometry>
    </visual>
  </link>

  <joint name="arm1_joint" type="revolute">
    <parent link="base_rot" />
    <child link="arm1" />
    <origin xyz="0 0 0.05" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit lower="-1.57" upper="1.57" />
  </joint>

  <!-- Arm segment 2 -->
  <link name="arm2">
    <visual>
      <origin xyz="0 0 0.060" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.120" radius="0.0175" />
      </geometry>
    </visual>
  </link>

  <joint name="arm2_joint" type="revolute">
    <parent link="arm1" />
    <child link="arm2" />
    <origin xyz="0 0 0.120" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit lower="-3.14" upper="0.01" />
  </joint>

  <!-- Tilt segment -->
  <link name="arm3">
    <visual>
      <origin xyz="0 0 0.035" rpy="0 0 0" />
      <geometry>
        <box size="0.017 0.017 0.07" />
      </geometry>
    </visual>
  </link>

  <joint name="arm3_joint" type="revolute">
    <parent link="arm2" />
    <child link="arm3" />
    <origin xyz="0 0 0.12" rpy="0 0 0" />
    <axis xyz="-1 0 0" />
    <limit lower="-1.57" upper="1.57" />
  </joint>

